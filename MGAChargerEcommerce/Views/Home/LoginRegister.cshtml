@model MGAChargerEcommerce.Models.RegisterModel
@{
	ViewBag.Title = "Login/ Register";
	Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<style type="text/css">
	.Validat_style {
		color: #ce6c6c;
		font-weight: 600;
		font-size: 13px;
	}
</style>

<div class="breadcrumbs-section plr-200 mb-80">
	<div class="breadcrumbs overlay-bg">
		<div class="container">
			<div class="row">
				<div class="col-xs-12">
					<div class="breadcrumbs-inner">
						<h1 class="breadcrumbs-title">Login / Register</h1>
						<ul class="breadcrumb-list">
							<li><a href="/Home/Index">Home</a></li>
							<li>Login / Register</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div id="page-content" class="page-wrapper">

	<!-- LOGIN SECTION START -->
	<div class="login-section mb-80">
		<div class="container">
			<div class="row">
				<div class="col-md-6">
					<div class="registered-customers">
						<h6 class="widget-title border-left mb-50">REGISTERED CUSTOMERS</h6>
						<div class="form-group">
							@if (TempData["LoginSuccessMessage"] != null)
							{
								<div class="alert alert-success" style="margin: 10px 0">
									@TempData["LoginSuccessMessage"]
								</div>
							}
							@if (TempData["LoginErrorMessage"] != null)
							{
								<div class="alert alert-danger" style="margin: 10px 0">
									@TempData["LoginErrorMessage"]
								</div>
							}
						</div>
						@using (Html.BeginForm("LoginRegister", "Home"))
						{
							@Html.AntiForgeryToken()
							@Html.ValidationSummary(true)

						<div class="login-account p-30 box-shadow">
							<p>If you have an account with us, Please log in.</p>
							@Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Email Address" })
							@Html.ValidationMessageFor(m => m.UserName, null, new { @class = "Validat_style" })

							@Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
							@Html.ValidationMessageFor(m => m.Password, null, new { @class = "Validat_style" })
							<p style="margin-top:20px;"><small><a href="/Home/ForgetPassword">Forgot your password?</a></small></p>
							<p style="margin-top:20px;"><small></small></p>
							<button class="submit-btn-1 btn-hover-1" type="submit">login</button>

						</div>

						}

					</div>
				</div>
				<!-- new-customers -->
				<div class="col-md-6">
					<div class="new-customers">
						<h6 class="widget-title border-left mb-50">NEW CUSTOMERS</h6>
						<div class="form-group">
							@if (TempData["RegSuccessMessage"] != null)
							{
								<div class="alert alert-success" style="margin: 10px 0">
									@TempData["RegSuccessMessage"]
								</div>
							}
							@if (TempData["RegErrorMessage"] != null)
							{
								<div class="alert alert-danger" style="margin: 10px 0">
									@TempData["RegErrorMessage"]
								</div>
							}
						</div>

						@using (Html.BeginForm("RegisterFormSubmit", "Home"))
						{
							@Html.AntiForgeryToken()
							@Html.ValidationSummary(true)
							{
								<div class="login-account p-30 box-shadow">
									<div class="row">
										<div class="col-sm-6">
											@Html.TextBoxFor(m => m.FirstName, null, new { @class = "form-control", @placeholder = "First Name" })
											@Html.ValidationMessageFor(m => m.FirstName, null, new { @class = "Validat_style" })
										</div>
										<div class="col-sm-6">
											@Html.TextBoxFor(m => m.LastName, null, new { @class = "form-control", @placeholder = "Last Name" })
											@Html.ValidationMessageFor(m => m.LastName, null, new { @class = "Validat_style" })
										</div>
									</div>

									@Html.TextBoxFor(m => m.MobileNo, null, new { @class = "form-control", @placeholder = "Phone here" })
									@Html.ValidationMessageFor(m => m.MobileNo, null, new { @class = "Validat_style" })

									@Html.TextBoxFor(m => m.Email, null, new { @class = "form-control", @placeholder = "Email address here..." })
									@Html.ValidationMessageFor(m => m.Email, null, new { @class = "Validat_style" })

									@Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
									@Html.ValidationMessageFor(m => m.Password, null, new { @class = "Validat_style" })

									@Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Confirm Password" })
									@Html.ValidationMessageFor(m => m.Password, null, new { @class = "Validat_style" })

									<div class="row">
										<div class="col-md-6">
											<button class="submit-btn-1 mt-20 btn-hover-1" type="submit" value="register">Register</button>
										</div>
										<div class="col-md-6">
											<button class="submit-btn-1 mt-20 btn-hover-1 f-right" id="btnClear" type="reset">Clear</button>
										</div>
									</div>
								</div>
							}
						}
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- LOGIN SECTION END -->
</div>

