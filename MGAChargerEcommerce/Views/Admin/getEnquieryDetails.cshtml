@model MGAChargerEcommerce.Models.EnquieryDetailModel

@{
    ViewBag.Title = "getEnquieryDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        @if (Model.EnquieryDetailList.Count > 0 && Model.EnquieryDetailList != null)
        {
            int SrNo = 0;
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>S/No.</th>
                            <th>Inquiry No.</th>

                            <th>Type</th>
                            <th>Customer Name</th>
                            <th>Customer Email</th>
                            <th>Subject.</th>
                            <th>Message/th>
                            <th>Date</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.EnquieryDetailList)
                        {
                            SrNo++;
                            <tr id="row_@item.Id">
                                <td>@SrNo</td>
                                <td>@item.InquiryNo</td>
                                <td>@item.Type</td>
                                <td>@item.CustomerName</td>
                                <td>@item.CustomerEmail</td>
                                <td>@item.Subject</td>
                                <td>@item.Message</td>
                                <td>@item.CreatedOn</td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
