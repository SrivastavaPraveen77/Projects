@model MGAChargerEcommerce.Models.ComplaintDetailModel
@{
    ViewBag.Title = "getComplaintsDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        @if (Model.ComplainDetailList.Count > 0 && Model.ComplainDetailList != null)
        {
            int SrNo = 0;
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>S/No.</th>
                            <th>Complaint No.</th>

                            <th>Type</th>
                            <th>Date</th>
                            <th>Customer Name</th>
                            <th>Customer Email</th>
                            <th>Customer Contact</th>
                            <th>Status</th>
                            <th>Action</th>
                            

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.ComplainDetailList)
                        {
                            SrNo++;
                            <tr id="row_@item.Id">
                                <td>@SrNo</td>
                                <td>@item.ComplaintNo</td>
                                <td>@item.Type</td>
                                <td>@item.Date</td>
                                <td>@item.CustomerName</td>
                                <td>@item.CustomerEmail</td>
                                <td>@item.ContactNo</td>
                                <td>@item.Status</td>
                               
                                <td>
                                    <a href="/Admin/updateComplaintDetail/@item.Id" style="cursor:pointer"><i class="fa fa-pencil-square-o"></i></a>
                                    @*<a href="/Admin/UpdateComplainDetail/@item.Id" style="cursor:pointer"><i class="fa fa-trash-o fa-fw"></i></a>*@
                                </td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

